<div class="index-container">
  <%= render 'shared/navbar' %>
  <% if current_user.interests.empty? %>
    <% controller.redirect_to new_user_interest_path %>
  <% else %>
    <div class="article-container">
      <% @news.each do |n| %>
        <%= render "shared/#{n.card_orientation}_card", article: n %>
        <% if current_user.editor %>
          <%=  link_to 'edit orientation', edit_card_path(n), class: 'btn btn-info' %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
