
<div class = "lists-container">
<%= render 'shared/navbar' %>
  <h2 class = "subtitle2">Your Lists</h2>
  <div class="lists">
    <div class = "list-collection">
      <% @lists.each do |list| %>
        <%if list.name == "History"%>
          <div class= "list-button">
            <p><%= link_to list.name, list_path(list) %></p>
          </div>  
        <%else%>
          <div class= "list-button">
            <p><%= link_to list.name, list_path(list) %></p> 
            <div class = "remove-edit">
              <%= link_to "remove /",
                list_path(list),
                method: :delete,
                data: {confirm: "sure?"} %>
              <%= link_to "edit", edit_list_path(list) %>   
            </div>     
          </div>
        <%end%>             
      <%end%> 
    </div>
    <div class = "new-list">
      <h3 class = "subtitle2">Create a new list<h3>
      <%= simple_form_for @list do |f| %>
        <div class = "inp">
        <div><%= f.input :name, placeholder: 'List name', label: false %></div>
        <div><%= f.submit "+", class: "create-list" %></div>
      <% end %> 
    </div>
  </div> 
</div>

 
