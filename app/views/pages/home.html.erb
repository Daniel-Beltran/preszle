
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="d-block w-100 banner" style="background-image: url('<%= asset_url 'image1.jpg' %>');" alt="First slide"> </div>
      <div class="container-landing">

        <div class="container-logo">
          <%= render 'shared/start_logo' %>
        </div>

        <div class="bottom-landing">
          <p > The news at your fingertips, <br>
          served in pretzel sized portions </p>
          <% if current_user %>
            <% if current_user.interests.length < 1 %>
              <%= link_to 'Start', new_user_interest_path %>
            <%else%>
              <%= link_to 'Start', articles_path %>
            <% end %>
