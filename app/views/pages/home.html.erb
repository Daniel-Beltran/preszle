
 <div class="container-landing">
  <div class="banner">  </div>

    <div class="container-logo">
    <%= render 'shared/start_logo' %>
    </div>
    <div class="bottom-landing">
      <p > The news at your fingertips, <br>
      served in pretzel sized portions </p>
      <% if current_user %>
        <% if current_user.interests.length < 1 %>
          <%= link_to 'Start', new_user_interest_path %>
        <%else%>
          <%= link_to 'Start', articles_path %>
        <% end %>
      <% else %>
        <%= link_to "Start", new_user_session_path %>
      <% end %>
    </div>
 </div>
<script>
  function nextSlide(image) {
    var banner = document.querySelector(".banner")
    banner.style.backgroundImage="url("+image+")"
  }

  var images = <%=raw @images %>
  var nextIndex = 0
  nextSlide(images[nextIndex])

  setInterval(() => {
    nextIndex = (nextIndex + 1) % images.length
    nextSlide(images[nextIndex])
  }, 5000)
</script>
